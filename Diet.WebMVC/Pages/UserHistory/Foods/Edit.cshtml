@page
@model EditFoodItemModel

<div class="col-md-4 login-form-container">
    <h4>Food</h4>
    <hr />
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="FoodItem.Id" />
        <input type="hidden" asp-for="FoodItem.CreatedDate" />
        <div class="form-group">
            <label asp-for="FoodItem.EatenFoodAmount" class="control-label"></label>
            <select asp-for="FoodItem.FoodId" asp-items="Model.FoodDropdownItems" id="mySelect" class="form-control">
                <option value="">-- غذایی را انتخاب کنید --</option>
            </select>
            <span asp-validation-for="FoodItem.EatenFoodAmount" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="FoodItem.EatenFoodAmount" class="control-label"></label>
            <input asp-for="FoodItem.EatenFoodAmount" class="form-control" />
            <span asp-validation-for="FoodItem.EatenFoodAmount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $('#mySelect').select2({
                placeholder: "Search and select an item"
            });
        });
    </script>
}
