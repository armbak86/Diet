<nav class="mb-4">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" asp-route-currentpage="@(Model.CurrentPage==1? 1:Model.CurrentPage-1)">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item active mr-1"><a asp-route-currentpage="@i" class="page-link">@i</a></li>
        }
        <li class="page-item">
            <a class="page-link" asp-route-currentpage="@(Model.CurrentPage==Model.TotalPages?Model.TotalPages:Model.CurrentPage+1)">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>