@page
@model Diet.WebMVC.Pages.Regimens.IndexModel

@{
    ViewData["Title"] = "Index";
}

@section Styles {
    <link rel="stylesheet" href="~/site/css/regimens.css" />
}

<div class="container mt-4">
    @* <h2 class="text-center mb-4">لیست رژیم‌های غذایی</h2> *@

    <div class="filter-section">
        <input type="text" class="form-control" id="dietSearch" placeholder="جستجوی رژیم">
        <select class="form-control" id="dietType">
            <option value="">نوع رژیم</option>
            <option value="کاهش وزن">کاهش وزن</option>
            <option value="افزایش وزن">افزایش وزن</option>
            <option value="ورزشی">ورزشی</option>
        </select>
        <input type="number" class="form-control" id="priceRange" placeholder="حداکثر قیمت">
    </div>

    <div class="row" id="dietList">
        @foreach (var regimen in Model.Regimens.Items)
        {
            <div class="col-md-4 mb-4">
                <div class="diet-card">
                    <img src="https://via.placeholder.com/300x200" alt="Diet 1">
                    <div class="diet-card-body">
                        <h3 class="diet-card-title">@regimen.Name</h3>
                        <div class="diet-card-price">۲۰۰٬۰۰۰ تومان</div>
                        <p class="diet-card-description">@regimen.Description?.Substring(0,25) ...</p>
                        <a class="btn btn-custom mt-3 mb-0" asp-page="./Details" asp-route-id="@regimen.Id">اطلاعات بیشتر</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <nav class="mb-4">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" asp-route-currentpage="@Model.CurrentPage-1" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li> 
            @for (int i = 1; i <= Model.Regimens.TotalPages; i++)
            {
                <li class="page-item active mr-1"><a asp-route-currentpage="@i" class="page-link">@i</a></li>
            }
            <li class="page-item">
                <a class="page-link" asp-route-currentpage="@Model.CurrentPage+1" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
