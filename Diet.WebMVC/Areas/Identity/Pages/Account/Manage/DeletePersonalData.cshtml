@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "حذف اکانت";
}

<h3>@ViewData["Title"]</h3>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>در صورت ادامه فرآیند اطلاعات حساب شما کاملا پاک شده و قابل بازگردانی نمی باشد</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-floating mb-3">
            <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="رمز عبور" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button class="w-100 btn btn-lg btn-danger" type="submit">حذف اکانت</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
