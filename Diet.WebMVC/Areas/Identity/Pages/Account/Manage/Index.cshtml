@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="UserViewModel.Weight" class="form-control" placeholder="وزن" />
                <label asp-for="UserViewModel.Weight" class="form-label"></label>
                <span asp-validation-for="UserViewModel.Hight" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="UserViewModel.Hight" class="form-control" placeholder="قد" />
                <label asp-for="UserViewModel.Hight" class="form-label"></label>
                <span asp-validation-for="UserViewModel.Hight" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="UserViewModel.Age" class="form-control" placeholder="سن" />
                <label asp-for="UserViewModel.Age" class="form-label"></label>
                <span asp-validation-for="UserViewModel.Age" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">تغییر</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
