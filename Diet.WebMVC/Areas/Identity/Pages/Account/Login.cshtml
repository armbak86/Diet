@page
@model LoginModel

@{
    ViewData["Title"] = "ورود";
}

@section Styles {
    <link rel="stylesheet" href="~/site/css/account.css" />
}


<section class="d-flex justify-content-center align-items-center" style="height:100vh">
    <div class="login-container">
        <form id="account" method="post">
            <h3>ورود</h3>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-group">
                <input asp-for="UserViewModel.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="ایمیل" />
                <span asp-validation-for="UserViewModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group  ">
                <input asp-for="UserViewModel.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="رمز عبور" />
                <span asp-validation-for="UserViewModel.Password" class="text-danger"></span>
            </div>
            <div class="checkbox-container">
                <label asp-for="UserViewModel.RememberMe">
                    <input asp-for="UserViewModel.RememberMe" />
                    @Html.DisplayNameFor(m => m.UserViewModel.RememberMe)
                </label>
            </div>
            <div>
                <button id="login-submit" type="submit" class="btn btn-custom">ورود</button>
            </div>
            <div class="forgot-password">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">ثبت نام</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
