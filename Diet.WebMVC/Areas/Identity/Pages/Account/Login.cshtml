@page
@model LoginModel

@{
    ViewData["Title"] = "ورود";
}

<div class="login-form-container">
    <form id="account" method="post">
        <h3>ورود</h3>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-group mb-3">
            <input asp-for="UserViewModel.Email" class="form-control" autocomplete="username" placeholder="ایمیل" />
            <span asp-validation-for="UserViewModel.Email" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <input asp-for="UserViewModel.Password" class="form-control" autocomplete="current-password" placeholder="رمز عبور" />
            <span asp-validation-for="UserViewModel.Password" class="text-danger"></span>
        </div>
        <div class="checkbox-container">
            <label asp-for="UserViewModel.RememberMe">
                <input asp-for="UserViewModel.RememberMe" />
                @Html.DisplayNameFor(m => m.UserViewModel.RememberMe)
            </label>
        </div>
        <div>
            <button type="submit" class="btn">ورود</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
