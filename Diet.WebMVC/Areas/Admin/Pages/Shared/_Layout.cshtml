<!doctype html>
<html lang="fa">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.rtl.min.css" integrity="sha384-gXt9imSW0VcJVHezoNQsP+TNrjYXoGcrqBZJpry9zJt8PCQjobwmhMGaDHTASo9N" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/site/css/site.css">

    <!-- Font -->
    <link href="https://cdn.jsdelivr.net/gh/rastikerdar/vazirmatn@v33.003/Vazirmatn-font-face.css" rel="stylesheet" type="text/css" />

    @await RenderSectionAsync("Styles", required: false)

    <title>اسم - داشبورد ادمین</title>
</head>

<body>
    <div class="row">
        <div class="col-md-2">
            <nav class="sidebar navbar-dark bg-dark p-3" style="">
                <div class="d-flex flex-column align-items-center mb-4">
                    <img src="https://via.placeholder.com/80" alt="Profile Picture" class="rounded-circle mb-3">
                    <h2 class="sidebar-title">پروفایل کاربری</h2>
                </div>
                <ul class="nav flex-column w-100">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/foods/index"><i class="fas fa-hamburger"></i> مدیریت غذا</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/exercises/index"><i class="fas fa-dumbbell"></i> مدیریت فعالیت ها</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/regimens/index"><i class="fas fa-dumbbell"></i> مدیریت رژیم های غذایی</a>
                    </li>  
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/users/index"><i class="fas fa-dumbbell"></i> مدیریت کاربران</a>
                    </li>
                </ul>
            </nav>
        </div>

        <div class="col-md-10 p-4">
            @RenderBody()
        </div>
    </div>



    <script src="~/lib/jquery/jquery-3.3.1.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="~/lib/slimscroll/jquery.slimscroll.js"></script>
    <script src="~/admin/js/main-js.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>